{
  "manifest_version": 2,

  "name": "JECoin",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
      "https://github.com/*",
      "https://*.ngrok.io/*",
      "tabs"
  ],
  "content_scripts": [
      {
          "matches": ["https://github.com/*/*/pull/*"],
          "js": ["extension.js"],
          "css": ["extension.css"],
          "run_at": "document_start"
      }
  ],
  "web_accessible_resources": [
      "JECoin.html"
  ]
}
